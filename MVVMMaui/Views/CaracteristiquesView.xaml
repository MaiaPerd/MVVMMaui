<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMMaui.Views.CaracteristiquesView">
    <CollectionView ItemsSource="{Binding Characteristics}" SelectionMode="None" >
        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="3"/>
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout HeightRequest="50" Margin="10" BackgroundColor="White">
                    <Label Text="{Binding Key}" Style="{StaticResource Grid}" ></Label>
                    <Label Text="{Binding Value}" TextColor="{StaticResource Primary}" FontSize="12"></Label>
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>    
    </CollectionView>
</ContentView>

