<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:converter="clr-namespace:MVVMMaui"
             x:Class="MVVMMaui.Pages.ChampionAddPage"
             BackgroundColor="{StaticResource Gray950}"
             Title="ChampionAddPage">
    <ContentPage.Resources>
        <converter:StringToImageConverter x:Key="StringToImage"/>
    </ContentPage.Resources>
    <FlexLayout Direction="Column">

        <!-- Header -->
          <VerticalStackLayout Grid.Row="0">
                    <Label Text="{Binding Titre}" HorizontalOptions="Center"
             Style="{StaticResource TitreChampion}"></Label>
         <Line BackgroundColor="{StaticResource Primary}"
               ></Line>

             </VerticalStackLayout>

        <!-- Body -->
        <FlexLayout FlexLayout.Grow="1">
             <ScrollView >
                 <Grid ColumnDefinitions="50, *" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" BindingContext="{Binding ChampionEdit}">
                       
                    <Label Text="Nom: "
                           Style="{StaticResource TextChampion}"
                           VerticalOptions="Center"
                           Grid.Column="0" Grid.Row="0"></Label>
                    <Entry
                           Placeholder="{Binding Name}"
                           Text="{Binding Name}"
                           WidthRequest="300"
                           IsEnabled="{Binding Edit}"
                           Style="{StaticResource EditChampion}"
                           Grid.Column="1" Grid.Row="0"></Entry>
             
                    <Label Text="Icon: "
                           Style="{StaticResource TextChampion}"
                           VerticalOptions="Center"
                           Grid.Column="0" Grid.Row="1"></Label>
                    <Image Source="{Binding Icon, Converter={StaticResource StringToImage}}"
                           Grid.Column="1" Grid.Row="1"></Image>

                    <Label Text="Image: "
                           Style="{StaticResource TextChampion}"
                           VerticalOptions="Center"
                           Grid.Column="0" Grid.Row="2"></Label>
                    <Image Source="{Binding Image, Converter={StaticResource StringToImage}}"
                           HeightRequest="100"
                           Grid.Column="1" Grid.Row="2"></Image>

                    <Label Text="Bio: "
                           Style="{StaticResource TextChampion}"
                           VerticalOptions="Center"         
                           Grid.Column="0" Grid.Row="3"></Label>
                    <Editor Text="{Binding Bio}"
                            AutoSize="TextChanges"
                            HeightRequest="200"
                            WidthRequest="300"
                            Placeholder="{Binding Bio}"
                            Style="{StaticResource EditorChampion}"
                            Grid.Column="1" Grid.Row="3"/>
             
                 <Label 
                    Text="Classe: "
                     Style="{StaticResource TextChampion}"
                     VerticalOptions="Center"
                     Grid.Column="0" Grid.Row="4"/>
                 <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*" Grid.Column="1" Grid.Row="4">
                    <Border Style="{StaticResource Classe}" Grid.Column="0" Grid.Row="0">
                        <Label Text="Assassin" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                    </Border>
                    <Border Style="{StaticResource Classe}" Grid.Column="1" Grid.Row="0">
                        <Label Text="Fighter" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                    </Border>
                    <Border Style="{StaticResource Classe}" Grid.Column="2" Grid.Row="0">
                        <Label Text="Mage" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                    </Border>
                    <Border Style="{StaticResource Classe}" Grid.Column="0" Grid.Row="1">
                        <Label Text="Marksman" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                    </Border>
                    <Border Style="{StaticResource Classe}" Grid.Column="1" Grid.Row="1">
                        <Label Text="Support" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                    </Border>
                    <Border Style="{StaticResource Classe}" Grid.Column="2" Grid.Row="1">
                        <Label Text="Tank" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                    </Border>

                 </Grid>
                 <!--<CollectionView x:Name="Class" ItemsSource="{Binding championManagerVM}">
                        <CollectionView.ItemsLayout>
                             <LinearItemsLayout Orientation="Vertical"
                                                ItemSpacing="10" />
                         </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                 <Border Style="{StaticResource Classe}" Grid.Column="2" Grid.Row="1">
                                        <Label Text="{Binding}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                                    </Border>                 
                            </DataTemplate>
                        </CollectionView.ItemTemplate>    
                </CollectionView>-->
                <Label 
                    Text="Caractéristiques: "
                    Style="{StaticResource TextChampion}"
                    VerticalOptions="Center"
                    Grid.Column="0" Grid.Row="5"/>
              

                 </Grid>
          
        </ScrollView>
           

        </FlexLayout>

        <!-- Footer -->
      <HorizontalStackLayout Padding="5" HorizontalOptions="Center">
                     <Button Text="{Binding Status}" Margin="10, 5"  Command="{Binding ChampionManagerVM.SaveChampionCommand}" CommandParameter="{Binding ChampionEdit}"></Button>
                     <Button Text="Annuler" Margin="10, 5" Clicked="Button_Clicked"></Button>
                 </HorizontalStackLayout>
    </FlexLayout>
